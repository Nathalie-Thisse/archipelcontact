<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Archipel Contact{% endblock %}</title>
        
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}            
        {% endblock %}

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}            
        {% endblock %}     

        {# bootstrap link #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

        {# font awesome link #}
         <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous">   

        {# splide link #}
        <!-- Link to the CSS file installed in node_modules directory, -->
        <link rel="stylesheet" href="../../node_modules/@splidejs/splide/dist/css/splide.min.css">

    </head>
    <body>
        <header>
            <div class='header-top'>
                <h1>Archipel Contact</h1>
                <h2>Un autre visage de l'Indonésie</h2>
                <img src="{{ asset('../assets/images/icons/down-arrow.svg') }}" alt="down arrow">
            </div>           
        </header>

        <nav class="menu">
            <ol>
                <li>
                    <a href="{{ path('home') }}">
                        <img src="{{ asset('../assets/images/Logo-invisible-avec-soleil.png') }}" alt="logo">
                    </a>
                </li>
                <li class="menu-item">
                    <a href="{{ path('islands') }}">Destinations</a>
                    <ol class="sub-menu">
                        <li class="menu-item"><a href="{{ path('bali') }}">Bali</a></li>
                        <li class="menu-item"><a href="{{ path('java') }}">Java</a></li>
                        <li class="menu-item"><a href="{{ path('lombok') }}">Lombok</a></li>
                        <li class="menu-item"><a href="{{ path('sulawesi') }}">Sulawesi</a></li>
                        <li class="menu-item"><a href="{{ path('flores') }}">Komodo & Flores</a></li>
                        <li class="menu-item"><a href="{{ path('sumba') }}">Sumba</a></li>
                        <li class="menu-item"><a href="{{ path('sumatra') }}">Sumatra</a></li>
                        <li class="menu-item"><a href="{{ path('kalimantan') }}">Kalimantan</a></li>  
                    </ol>
                </li>
                <li class="menu-item"><a href="{{ path('tours') }}">Circuits</a></li>
                <li class="menu-item"><a href="{{ path('information') }}">Informations Pratiques</a></li>
                <li class="menu-item"><a href="{{ path('agency') }}">L'Agence</a></li>
                <li class="menu-item"><a href="{{ path('contact') }}">Contact</a></li>
            </ol>

        </nav>

        {% block body %}
        
        {# bootstrap links:  #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>

        {% endblock %}

        <footer class='footer'>
            
            <h4>Archipel Contact</h4>            

            <div class="footer-content">
                <ul>
                    <a href=""><li>Destinations</li></a>
                    <a href=""><li>Circuits</li></a>
                    <a href=""><li>Informations pratiques</li></a>
                    <a href=""><li>L'Agence</li></a>
                    <a href=""><li>Contact</li></a>
                    <a href=""><li>Mentions légales</li></a>
                    <a href=""><li>CGV</li></a>
                </ul>

                <div>                    
                    <h5>Nos bureaux à Paris</h5>
                    <a class="tel" href="tel:+33188610545"><p>Téléphone : +33 1 88 61 05 45</p></a>

                    <h5>Nos bureaux à Denpasar</h5>
                    <p>Jalan Ahmad Yani Utara
                    <p>Peguyangan, North Denpasar</p>
                    <p>Bali 80115 - INDONÉSIE</p>

                </div>

                <div>
                    <a href="mailto:contact@archipel-contact.com">
                        <p>Contactez-nous</p>
                        <img src="{{ asset('../assets/images/icons/icon-whitepaperplane.png') }}" alt="email-icon">
                    </a>
                </div>

            </div>  

        </footer>

    </body>
</html>
