{% extends 'base.html.twig' %}

{% block title %}Tour{% endblock %}

{% block body %}

    <div id="tour" class="wrapper">

        {# section 2 - introduction #}
        <section class="introduction">
            <h2>{{ tour.title }}</h2>
            <div>
                <p>{{ tour.description }}</p>
            </div>

        </section>

        {# section 2 - summary & map #}
        <section class="summaryandmap">                
            <div class="summary">
                <ul class="gradient-list">
                    <li>Durée : {{ tour.duration }} nuits</li>
                    <li>Iles visitées : {{ tour.islands }}</li>
                    <li>Prix : à partir de {{ tour.price }} € par personne</li>
                </ul>
            </div>

            <div class="map-responsive">
                <iframe src="{{ tour.map }}" width="500" height="300"></iframe>
            </div>
        </section>

        {# section 3 - programme details #}
        {# {{ dump(days) }} #}

        <section class="programme-details">

            <h3>Détails du circuit : </br>
                {{ tour.title }}</h3>

            {% for day in tour.days %}

            <div class="programme-day">

                <div class="day-details"> 
                    <h4>{{ day.title }}</h4>             
                    <p>{{ day.description }}</p>                
                    <p>{{ day.hotel }}</p>
                </div>

                <div class="day-photo">
                    {# <img src="{{ day.photo }}" alt=""> #}
                    <img src="{{ asset('../assets/images/tours/programme1/tanah-lot.jpg') }}" alt="">               
                </div>
            </div>

            {% endfor %}
        </section>

        {# section 4 - final information and sales conditions #}
        <section class="conditions">
            <div class="price">
                <h4>Nos conditions</h4>
                <p>Prix : à partir de {{ tour.price }} €</p>
                <p>Note : prix en basse saison, base 2 personnes, en hôtel de charme de type 3*</p>
            </div>
            
            <div class="price-included">
                <div>
                    <p><i class="fas fa-check"></i>Nos prix comprennent</p>
                    <p>{{ tour.included }}</p>
                </div>

                <div>
                    <p><i class="fas fa-times"></i>Nos prix ne comprennent pas</p>
                    <p>{{ tour.notIncluded }}</p>
                </div>
            </div>
        </section>
    </div>

{% endblock %}