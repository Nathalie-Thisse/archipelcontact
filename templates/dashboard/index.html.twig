{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}

    <div class="container">

        <h2 id="dashboard">Admin Dashboard</h2>

        <div class="d-flex justify-content-around">

            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">NEWS</h5>
                    <p class="card-text">Create, delete and manage the news published on the Home & Informations pages.</p>
                    <a href="{{ path('news_index') }}#news-index" class="card-link">Go to News' index</a>
                </div>
            </div>

            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">TOURS</h5>
                    <p class="card-text">Create, delete and manage tours published on the website.</p>
                    <a href="{{ path('tours_edit_index') }}#tours-index" class="card-link">Go to Tours' index</a>
                </div>
            </div>

            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">USERS</h5>
                    <p class="card-text">Create, delete and manage users of the website.</p>
                    <a href="{{ path('user_index') }}#users-index" class="card-link">Go to Users' index</a>
                </div>
            </div>            
        </div>

        <div class="d-flex justify-content-center mt-5">
            <a href="{{ path('app_logout') }}" class="btn btn-info mb-5" role="button"><i class="fas fa-sign-out-alt me-2"></i>Sign Out</a>
        </div>
        
    </div>

{% endblock %}
