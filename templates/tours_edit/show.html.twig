{% extends 'base.html.twig' %}

{% block title %}Tours{% endblock %}

{% block body %}

    <div class="container">
        <h1 id="show-tour">Tours</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ tour.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td class="fw-bold">{{ tour.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ tour.description }}</td>
                </tr>
                <tr>
                    <th>Duration</th>
                    <td>{{ tour.duration }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ tour.price }}</td>
                </tr>
                <tr>
                    <th>Islands</th>
                    <td>{{ tour.islands }}</td>
                </tr>
                <tr>
                    <th>Photo</th>
                    <td>{{ tour.photo }}</td>
                </tr>
                <tr>
                    <th>Map</th>
                    <td>{{ tour.map }}</td>
                </tr>
                <tr>
                    <th>Included</th>
                    <td>{{ tour.included }}</td>
                </tr>
                <tr>
                    <th>NotIncluded</th>
                    <td>{{ tour.notIncluded }}</td>
                </tr>
            </tbody>
        </table>

        {% for day in tour.days %}
            <li class="border-top mt-4 pt-3 fw-bold">{{ day.title }}</li>
            <li>{{ day.description }}</li>
            <li>{{ day.photo }}</li>
            <li>{{ day.hotel }}</li>
        {% endfor %} 


        <a href="{{ path('tours_edit_index') }}#index-tours" class="btn btn-warning m-1"><i class="fas fa-arrow-alt-circle-left m-2"></i>back to list</a>

        <a href="{{ path('tours_edit_edit', {'id': tour.id}) }}#edit-tour" class="btn btn-primary m-2" role="button"><i class="fas fa-pencil-alt"></i>edit</a>

        {{ include('tours_edit/_delete_form.html.twig') }}

    </div>

{% endblock %}
