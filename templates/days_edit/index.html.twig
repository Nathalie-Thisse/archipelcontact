{% extends 'base.html.twig' %}

{% block title %}Days index{% endblock %}

{% block body %}

    {# No need to use Days Index as we reach the page through Tours Index -> Edit Tour -> Edit Day #}
    <div class="container">
        <h1 id="days-index">Days index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Tours</th>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Hotel</th>
                    <th>Photo</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for day in days %}
                <tr>
                    <td>{{ day.tours.title }}</td>
                    <td>{{ day.id }}</td>
                    <td>{{ day.title }}</td>
                    <td>{{ day.description }}</td>
                    <td>{{ day.hotel }}</td>
                    <td>{{ day.photo }}</td>
                    <td>
                        <a href="{{ path('days_edit_show', {'id': day.id}) }}#day-show" class="btn btn-primary m-1" role="button"><i class="far fa-eye"></i></a>
                        <a href="{{ path('days_edit_edit', {'id': day.id}) }}#day-edit" class="btn btn-primary m-1" role="button"><i class="fas fa-pencil-alt"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('days_edit_new') }}#day-create">Create new</a>
    </div>
{% endblock %}
