{% extends 'base.html.twig' %}

{% block title %}Days{% endblock %}

{% block body %}

    <div class="container">
        <h1 id="day-show">Days</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ day.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ day.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ day.description }}</td>
                </tr>
                <tr>
                    <th>Hotel</th>
                    <td>{{ day.hotel }}</td>
                </tr>
                <tr>
                    <th>Photo</th>
                    <td>{{ day.photo }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('days_edit_index') }}#days-index" class="btn btn-warning m-1"><i class="fas fa-arrow-alt-circle-left m-2"></i>back to list</a>

        <a href="{{ path('days_edit_edit', {'id': day.id}) }}#day-edit" class="btn btn-primary m-2" role="button"><i class="fas fa-pencil-alt"></i>edit</a>

        {{ include('days_edit/_delete_form.html.twig') }}
    </div>
{% endblock %}
